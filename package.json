{
  "name": "SalesOrder",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4",
    "generator-fiori": "^0.0.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/dev-cap-tools": "^1.31.0",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-salesorder": "cds watch --open uvs.salesorder/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "auth" : {
        "kind" : "mocked",
        "users" : {
          "sai" : {
            "password" : "root",
            "roles" : ["Manager"]
          }
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "destinations": true,
      "ZAPI_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/ZAPI_SALES_ORDER_SRV",
        "[production]": {
          "credentials": {
            "destination": "S4H1",
            "path": "/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      },
      "[hybrid]": {
        "ZAPI_SALES_ORDER_SRV": {
          "kind": "odata-v2",
          "model": "srv/external/ZAPI_SALES_ORDER_SRV",
          "credentials": {
            "destination": "S4H1",
            "path": "/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          },
          "headers": {
            "X-Requested-With": "XMLHttpRequest"
          }
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/salesorder"
  ]
}

